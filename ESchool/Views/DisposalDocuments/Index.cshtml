@model IEnumerable<ESchool.Models.DisposalDocument>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("اصدار سند", "Create",null,new {@class = "btn btn-mainColor" })
</p>
<table class="table table-bordered">
    <tr class="bg-mainColor text-white"> 
        <th>
            @Html.DisplayNameFor(model => model.user.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfPay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thisfor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.payType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.user.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateOfPay)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Amount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Thisfor)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Notes)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.payType)
    </td>
    <td>
        @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-mainColor" }) |
        @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }, new { @class = "btn btn-mainColor" }) |
        @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-mainColor" })|
         @Html.ActionLink("طباعة الوصل", "DisposalDocument", "Report", new { id = item.Id },new {@class="btn btn-mainColor" ,@target = "_blank"})
    </td>
</tr>
}

</table>
