@model IEnumerable<ESchool.Models.DisposalDocument>

@{
    ViewBag.Title = "IndexById";
}

@{
    if (Model.Count() > 0)
    {
        <h3 class="text-mainColor">الطالب : @Model.ToList().FirstOrDefault().user.Name</h3>
        <span class="text-mainColor">هوية رقم : @Model.ToList().FirstOrDefault().user.IdentityId</span>
        <span class="text-mainColor">جوال رقم : @Model.ToList().FirstOrDefault().user.Mobile1</span>

        <table class="table table-bordered">
            <tr class="bg-mainColor text-white">
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfPay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Thisfor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.payType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfPay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Thisfor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.payType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

    }
    else
    {
        <h4 class="text-center mt-5 text-danger">عفوا لا يوجد سندات حتى الان </h4>
    }
}

