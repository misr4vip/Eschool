@model IEnumerable<ESchool.Models.MemberExpenses>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("اضافة مديونية", "Create", null, new { @class = "btn btn-mainColor" })
    @Html.ActionLink("اضافة رسوم الفصل الدراسي لكل الطلاب", "AddStudyCostToAll", null, new { @class = "btn btn-mainColor" })

</p>
<table class="table table-bordered">
    <tr class="bg-mainColor text-white">
        <th>
            @Html.DisplayNameFor(model => model.user.IdentityId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.expensesText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpensesValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearOfStudy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semster)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalExpensesValue)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.user.IdentityId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.user.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.expensesText)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ExpensesValue)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.YearOfStudy)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Semster)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Vat)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Discount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TotalExpensesValue)
    </td>
    <td>
        @Html.ActionLink("تعديل", "Edit", new { id = item.Id }) |
        @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }) |
        @Html.ActionLink("حذف", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
