@model ESchool.Models.DisposalDocument

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4 class="text-mainColor">اصدار سند قبض</h4>
    <h5  class="text-mainColor">الجنسية :<span id="Nathionality">@ViewBag.nathionality</span>  </h5>
