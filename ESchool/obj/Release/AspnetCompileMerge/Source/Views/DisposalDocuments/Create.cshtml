        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 text-center mt-2 col-md-10">
            <input type="submit" value="حفظ" class="btn btn-mainColor" />
            @Html.ActionLink("عودة للقائمة", "Index", "Account", null, new { @class = "btn btn-mainColor" })

        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
