<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/Rtl.css" />
    <link rel="stylesheet" href="~/Content/printStyle.css" media="print" />

</head>
<body dir="rtl" style="opacity:0.8 ">
    <div class="container-fluid body-content mt-5">

        <div class="row mt-5 mb-5" id="Header"></div>
        <div class="row border-2 rounded-3  ">

          <div class="col-md-4"></div>
            <div class="col-md-4"> @RenderBody()</div>

            <div class="col-md-4 mt-5 text-center">
                <img class="img-fluid" src="~/Images/logo.png" />
            </div>

        </div>

        
        <footer class="fixed-bottom">
            <hr />
            <p> v 1.3</p>
            <p>Riyadh Al Islam School &copy; @DateTime.Now.Year  -  Powerd By <a href="https://wwww.Processor.life ">Processor.life</a> Eng/Mahmoud Fayez</p>
        </footer>
    </div>


    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/MyJs.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
