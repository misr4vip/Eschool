@model ESchool.Models.MemberClassYear

@{
    ViewBag.Title = "Create";
}

<h2>اضافة البيانات الأكاديمية</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MemberId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MemberId, null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MemberId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.marhalaId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.marhalaId,null,  htmlAttributes : new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.marhalaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SaufId, htmlAttributes: new { @class = "control-label d-none col-md-2", id = "lblSauf" })
            <div class="col-md-10">
                <select class="form-control d-none" name="SaufId" id="SaufId"> </select>

                @Html.ValidationMessageFor(model => model.SaufId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClassId, htmlAttributes: new { @class = "control-label d-none  col-md-2",id = "lblClass"})
            <div class="col-md-10">
                <select class="form-control d-none " name="ClassId" id="ClassId"></select>


                @Html.ValidationMessageFor(model => model.ClassId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsCurrent, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsCurrent)
                    @Html.ValidationMessageFor(model => model.IsCurrent, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 text-center mt-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-mainColor" />
                @Html.ActionLink("عودة للقائمة", "Index","Account",null,new { @class = "btn btn-mainColor" })

            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
